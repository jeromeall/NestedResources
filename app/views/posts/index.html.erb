<h1>Posts Newsfeed </h1>

<% @posts.each do |post| %>
	<div>Link: <%= post.link %></div>
	<div>Body: <%= post.body %></div>
	<% post.comments.each do |comment| %>
		<div>Comment: <%= comment.body %>, posted by: <%= comment.post.user.email %></div>
	<%end%>
	<%= link_to "Add Comment", new_post_comment_path(post) %>
	<%= link_to "Delete", 
	<br>
<%end%>